<!DOCTYPE html>
<html>
<head>
  <title>FirstPerson</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "https://maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" %>
  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
</head>
<body>

  <%# if logged_in? %>

    <nav>
      <div id="show" class="button">Map</div>
      <div id="profile" class="button">Character</div>
      <div id="quests" class="button">Quests</div>
      <div id="logout" class="button">Logout</div>
      <div id="xp" class="button">Total XP: <%= @user.total_xp %></div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <%# end %>

  <%= yield %>

</body>
</html>



