.quest_title
  %h1 Quest Page!
  =flash[:notice]

.list
  #enable_quests
    Show Quest Map
  %h2 Here are your quests!
  - @quests.each do |quest|
    = quest.title
    = form_for @user_quest, url: accept_path do |f|
      = f.hidden_field :quest_id, :value => quest.id
      = f.submit "Accept"
    %br
    %br


.create
  %h2 Create a quest
  = form_for @quest, url: create_path do |g|
    = g.text_field :title, :placeholder => "Title"
    = g.text_area :description, size: "60x12", :placeholder => "Description"
    = g.number_field :user_limit, :placeholder => "Acceptance limit"
    = g.text_field :category, :placeholder => "Category"
    = g.datetime_field :end_date, :placeholder => "End Date"
    = g.submit "Add your checkpoints!"
  %br
  %br


#map
